from abc import ABC, abstractmethod

class Jogo:
    def __init__(self, id_game, name, amount_honey, status):
        self.id_game = id_game
        self.name = name
        self.amount_honey= amount_honey
        self.status= status

class Background(Jogo):
    def __init__(self, id_game, id_background, name_background):
        super().__init__(id_game)
        self.name_background = name_background
        self.id_background = id_background

class Plataforma(Background):
    def __init__(self, id_background, id_plataforma, posx_plataforma, posy_plataforma, largura, altura):
        super().__init__(id_background)
        self.id_plataforma =  id_plataforma
        self.posx_plataforma =  posx_plataforma
        self.posy_plataforma = posy_plataforma
        self.largura = largura
        self.altura = altura

class Honey(Background):
    def __init__(self, id_honey, posx_honey, posy_honey, id_background):
        super().__init__(id_background)
        self.id_honey = id_honey
        self.posx_honey= posx_honey
        self.posy_honey= posy_honey
    


class Personagens(Jogo):
    def __init__(self, id_game, id_character, sprite,  name, pos_x, pos_y, animation, vida):
        super().__init__(id_game)
        self.id_character= id_character
        self.sprite= sprite
        self.name= name
        self.pos_x = pos_x
        self.pos_y= pos_y
        self.animation = animation
        self.vida = vida


    @abstractmethod
    def fazer_animacao(self):
        pass

    @abstractmethod
    def verifica_colisao(self, outro_px, outro_py):
        pass

    @abstractmethod
    def movimento(self):
        pass

class Npc(Personagens):
    def __init__(self, id_character, sprite,  name, pos_x, pos_y, animation, text_box, hitbox_px_npc, hitbox_py_npc):
        super().__init__(id_character)
        self.sprite= sprite
        self.name= name
        self.pos_x = pos_x
        self.pos_y= pos_y
        self.animation = animation
        self.text_box = text_box
        self.hitbox_px_npc = hitbox_px_npc
        self.hitbox_py_npc = hitbox_py_npc

    def verifica_colisao(self, posx_pooh, posy_pooh):
        return super().verifica_colisao(self.hitbox_px_npc==posx_pooh and self.hitbox_py_npc==posy_pooh)
    
    def fazer_animacao(self):
        return super().fazer_animacao()
    
class Player(Personagens):
    def __init__ (self, id_character, speed):
        super().__init__(id_character)
        self.speed = speed

    def fazer_animacao(self):
        return super().fazer_animacao()
    
class Inimigo(Personagens):
